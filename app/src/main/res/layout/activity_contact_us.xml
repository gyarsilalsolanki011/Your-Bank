<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_background"
    android:id="@+id/contactUsActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ContactUsActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/bottom_nav_dark"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Bank Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_address"
            android:paddingTop="12dp"
            android:theme="@style/Theme.Text.Primary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contactAddress"
            android:paddingStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"/>

        <!-- Email Support -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_email"
            android:paddingTop="12dp"
            android:theme="@style/Theme.Text.Primary"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contactEmail"
            android:textSize="16sp"
            android:textColor="@color/light_blue"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Phone Support -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_phone"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:theme="@style/Theme.Text.Primary"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contactPhone"
            android:textSize="16sp"
            android:textColor="@color/light_blue"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Social Media -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/follow_us"
            android:paddingTop="12dp"
            android:theme="@style/Theme.Text.Primary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_facebook"
                android:contentDescription="@string/image"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_twitter"
                android:contentDescription="@string/image"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/linkedin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_linkedin"
                android:contentDescription="@string/image"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_whatsapp"
                android:contentDescription="@string/image"
                android:padding="8dp"/>

        </LinearLayout>

        <!-- Inquiry Form -->
        <EditText
            android:id="@+id/messageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/type_your_message"
            android:background="@drawable/input_field_bg"
            android:inputType="text"
            android:textColor="#212121"
            android:textSize="16sp"
            android:gravity="top"
            android:minHeight="100dp"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/sendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_message"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</LinearLayout>