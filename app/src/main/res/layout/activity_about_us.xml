<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_background"
    android:id="@+id/aboutUsActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.AboutUsActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/bottom_nav_dark"
        app:titleTextColor="@android:color/white" />

    <!-- About Us Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- App Logo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_service"
                android:contentDescription="@string/image"
                android:layout_marginBottom="10dp"
                app:tint="@color/primary"/>

            <!-- Bank Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <!-- Bank Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_motto"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="12dp"/>

            <!-- About Bank -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aboutUs"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>

            <!-- Mission Statement -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_mission"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>

            <!-- Vision Statement -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_vision"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>

            <!-- Security Assurance -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_assurance"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>

            <!-- Contact Us -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thanks"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>